<% include ./partials/head %>

<h2 class="center-align">Add Article</h2>
<div class="row">
  <form method="POST" action="/articles/add">
    <div class="row">
      <div class="input-field col s6 offset-s3">
        <input id="title" name="title" type="text" class="validate"/>
        <label for="title">Title</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s6 offset-s3">
        <input id="tags" name="tags" type="text" class="validate"/>
        <label for="title">Tags, comma separated</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s6 offset-s3">
        <textarea id="body" name="body" type="text" class="materialize-textarea"></textarea>
      </div>
    </div>
    <div class="row">
      <div class="col s6 offset-s3 center-align">
        <button action="submit" Class="blue-grey darken-3 btn-large">Post</button>
      </div>
    </div>
  </form>

</div>

<% include ./partials/foot %>